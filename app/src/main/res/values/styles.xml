<resources>

    <!-- Base application theme. -->
    <style name="TheMovieDB" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/theMovieDB_green</item>
    </style>

    <!-- Text Appearance-->

    <!-- Headline -->
    <style name="TheMovieDB.TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline" />

    <style name="TheMovieDB.TextAppearance.Headline.H1">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="TheMovieDB.TextAppearance.Headline.H2">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TheMovieDB.TextAppearance.Headline.H3">
        <item name="fontFamily">@font/eczar_regular</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TheMovieDB.TextAppearance.Headline.H4">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TheMovieDB.TextAppearance.Headline.H5">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Subtitle -->
    <style name="TheMovieDB.TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead" />

    <style name="TheMovieDB.TextAppearance.Subhead.S1">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TheMovieDB.TextAppearance.Subhead.S2">
        <item name="fontFamily">@font/roboto_condensed</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Body -->
    <style name="TheMovieDB.TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/eczar_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TheMovieDB.TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button -->
    <style name="TheMovieDB.TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Caption -->
    <style name="TheMovieDB.TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TheMovieDB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TheMovieDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
